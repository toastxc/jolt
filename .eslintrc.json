{
  "plugins": [
    "@typescript-eslint",
    "svelte"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:svelte/base",
    "plugin:svelte/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "extraFileExtensions": [".svelte"]
  },
  "overrides": [
    {
      "files": ["*.svelte"],
      "parser": "svelte-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser"
      }
    }
  ],
  "env": {
    "browser": true
  },
  "rules": {
    // `ts` in VS Code already gives errors for undefined stuff.
    "no-undef": "off"
  }
}
